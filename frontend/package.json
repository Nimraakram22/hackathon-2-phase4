{
  "name": "todo-chatbot-frontend",
  "version": "0.1.0",
  "description": "AI-powered todo chatbot frontend with React and OpenAI ChatKit",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
